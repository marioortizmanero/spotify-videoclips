<?xml version="1.0" encoding="utf-8"?>
<Package
    xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
    xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
    xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
    IgnorableNamespaces="uap mp">

    <Identity
        Name="Vidify"
        Publisher="CN=GlowApps"
        Version="2.2.7.0" />

    <Properties>
        <DisplayName>Vidify</DisplayName>
        <PublisherDisplayName>GlowApps</PublisherDisplayName>
        <Description>Play music videos automatically for the songs playing on any device</Description>
        <Logo>images\logo.png</Logo>
    </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.0.0" MaxVersionTested="10.0.0.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Capabilities>
    <Capability Name="internetClientServer" />
    <Capability Name="privateNetworkClientServer" />
  </Capabilities>

  <Applications>
      <Application
          Id="App"
          Executable="Vidify.exe"
          EntryPoint="Vidify.App">

          <uap:VisualElements
              DisplayName="Vidify"
              Square150x150Logo="AppxAssets\Square150x150Logo.png"
              Square44x44Logo="AppxAssets\Square44x44Logo.png"
              Description="Vidify Desktop Application"
              BackgroundColor="transparent">

              <uap:DefaultTile Wide310x150Logo="AppxAssets\Wide310x150Logo.png">
              </uap:DefaultTile>
              <uap:SplashScreen Image="AppxAssets\SplashScreen.png" />

          </uap:VisualElements>
      </Application>
  </Applications>
</Package>
